<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hdu.mapper.UserMapper">

    <resultMap id="BaseResultMap" type="com.hdu.pojo.User">
            <id property="userId" column="user_id" jdbcType="INTEGER"/>
            <result property="userName" column="user_name" jdbcType="VARCHAR"/>
            <result property="userSex" column="user_sex" jdbcType="INTEGER"/>
            <result property="userPassword" column="user_password" jdbcType="VARCHAR"/>
            <result property="userEmail" column="user_email" jdbcType="VARCHAR"/>
            <result property="userUrl" column="user_url" jdbcType="VARCHAR"/>
            <result property="userCreated" column="user_created" jdbcType="TIMESTAMP"/>
            <result property="isDeleted" column="is_deleted" jdbcType="INTEGER"/>
            <result property="userActivated" column="user_activated" jdbcType="TIMESTAMP"/>
    </resultMap>
<!--        User selectOneByUserEmail(String userEmail);-->
        <select id="selectOneByUserEmail" resultType="com.hdu.pojo.User">
                select * from t_user where user_email = #{userEmail}
        </select>
<!--    User selectOneByUserName(@Param("userName") String userName);-->
    <select id="selectOneByUserName" resultType="com.hdu.pojo.User">
        select * from t_user where user_name = #{userName}
    </select>

</mapper>
